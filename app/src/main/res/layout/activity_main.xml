<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:backgroundTint="@android:color/background_light"
    android:visibility="visible"
    tools:context="atschool.co.jp.kawaii.MainActivity">
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/countTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="254dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView"
        app:srcCompat="@android:color/transparent" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="31dp"
        android:layout_height="192dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout2">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="295dp" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="371dp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="443dp" />
    </RadioGroup>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countTextView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/optionButton1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="346dp"
                android:layout_height="64dp"
                android:elevation="0dp"
                android:fontFamily="casual"
                android:onClick="onClick"
                android:text="  A.Button"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="30sp"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/radioGroup2"
                app:layout_constraintStart_toStartOf="@+id/optionButton2"
                tools:layout_editor_absoluteY="85dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/optionButton2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="346dp"
                android:layout_height="64dp"
                android:fontFamily="casual"
                android:onClick="onClick"
                android:text="  B.Button"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="30sp"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/radioGroup2"
                app:layout_constraintStart_toStartOf="@+id/optionButton3"
                tools:layout_editor_absoluteY="149dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/optionButton3"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="346dp"
                android:layout_height="64dp"
                android:fontFamily="casual"
                android:onClick="onClick"
                android:text="  C.Button"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="30sp"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/radioGroup2"
                tools:layout_editor_absoluteY="213dp" />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/contentTextView"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="問題文"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countTextView" />

    setTitle("TESTTEST");




    </android.support.constraint.ConstraintLayout>
